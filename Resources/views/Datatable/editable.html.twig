{% for column in view_columns %}
    {% if column.editable is defined %}
        {% if true == column.editable %}
            $('span.sg-editable-' + '{{ column.data }}').editable({
                type: 'text',
                name: '{{ column.data }}',
                url: "{{ path('sg_datatables_edit') }}",
                title: 'Edit ' + '{{ column.data }}',
                params: function (params) {
                    params.entity = '{{ datatable.entity|e('js') }}';
                    params.token = '{{ datatable_editable_csrf_token() }}'; // @todo

                    return params;
                }
            });
        {% endif %}
    {% endif %}
{% endfor %}
