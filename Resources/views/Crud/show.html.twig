{% extends datatable_admin_site_config().base_layout %}

{% block main %}
    <table class="table">
        <tbody>
            {% for field in fields %}
                <tr>
                    <td>
                        <b>{{ field|capitalize }}:</b>
                    </td>
                    <td>
                        {% if 'datetime' != mappings[field]['type'] %}
                            {{ entity[field] }}
                        {% else %}
                            {{ entity[field]|date }}
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {{ form(delete_form) }}
    <hr>
    <a href="{{ path(list_action) }}" class="btn btn-primary">{{ 'datatables.actions.toList'|trans({}, 'messages') }}</a>
{% endblock %}
