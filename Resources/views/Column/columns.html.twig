{% for column in columns %}
    {
        {% if column.bSearchable == false %}
            "bSearchable": false,
        {% else %}
            "bSearchable": true,
        {% endif %}

        {% if column.bSortable == false %}
            "bSortable": false,
        {% else %}
            "bSortable": true,
        {% endif %}

        {% if column.bVisible == false %}
            "bVisible": false,
        {% else %}
            "bVisible": true,
        {% endif %}

        {% if column.mData != null %}
            "mData": "{{ column.mData }}",
        {% else %}
            "mData": null,
        {% endif %}

        {% if column.mRender != null %}
            {% if column.isAssociation == true %}
                "mRender": "{{ column.mRender }}",
            {% else %}
                "mRender": function(data, type, full) {
                    return {{ column.mRender }}(data, type, full);
                },
            {% endif %}
        {% endif %}

        {% if column.sClass != "" %}
            "sClass": "{{ column.sClass }}",
        {% endif %}

        {% if column.sDefaultContent != null %}
            "sDefaultContent": "{{ column.sDefaultContent }}",
        {% endif %}

        "sTitle": "{{ column.sTitle }}",

        {% if column.sWidth != null %}
            "sWidth": "{{ column.sWidth }}",
        {% endif %}
    },
{% endfor %}
