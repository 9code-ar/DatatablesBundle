{
    {% if column.bSearchable == false %}
        "bSearchable": false,
    {% else %}
        "bSearchable": true,
    {% endif %}

    {% if column.bSortable == false %}
        "bSortable": false,
    {% else %}
        "bSortable": true,
    {% endif %}

    {% if column.bVisible == false %}
        "bVisible": false,
    {% else %}
        "bVisible": true,
    {% endif %}

    "mData": null,
    "mRender": function(data, type, full) {
        if (full.{{ column.name }} == null) {
            return null;
        }

        if (typeof full.{{ column.name }}.timestamp != 'undefined') {
            moment.lang("{{ app.request.locale }}");
            return moment.unix(full.{{ column.name }}.timestamp).format('lll');
        } else {
            return null;
        }
    },

    {% if column.sClass != "" %}
        "sClass": "{{ column.sClass }}",
    {% endif %}

    {% if column.sDefaultContent != null %}
        "sDefaultContent": "{{ column.sDefaultContent }}",
    {% endif %}

    "sTitle": "{{ column.sTitle }}",

    {% if column.sWidth != null %}
        "sWidth": "{{ column.sWidth }}",
    {% endif %}
},
