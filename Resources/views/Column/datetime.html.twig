{% extends 'SgDatatablesBundle:Column:column.html.twig' %}

{% block data %}
    "mData": null,
    "mRender": function(data, type, full) {
        if (full.{{ column.property }} == null) {
            return null;
        }

        if (typeof full.{{ column.property }}.timestamp != 'undefined') {
            moment.lang("{{ app.request.locale }}");
            return moment.unix(full.{{ column.property }}.timestamp).format('lll');
        } else {
            return null;
        }
    },
{% endblock %}